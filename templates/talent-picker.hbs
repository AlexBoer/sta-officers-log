<form class="sta-focus-picker" autocomplete="off">
  <div data-sta-callbacks-dialog="choose-benefit"></div>

  <div class="sta-focus-picker-top-actions">
    {{#if showCustomButton}}
      <button
        type="button"
        class="dialog-button"
        data-action="custom"
      >{{createCustomLabel}}</button>
    {{/if}}
    <label class="sta-focus-picker-eligible">
      <input type="checkbox" name="eligibleOnly" />
      <span>{{eligibleLabel}}</span>
    </label>
  </div>

  <div class="form-group">
    <label>{{searchLabel}}</label>
    <div class="form-fields">
      <input
        type="text"
        name="q"
        placeholder="{{searchPlaceholder}}"
        autocomplete="off"
      />
    </div>
    <p class="hint" data-hook="foundCount"></p>
  </div>

  {{#if groups.length}}
    <div class="sta-focus-picker-groups">
      {{#each groups}}
        <section class="sta-focus-picker-group" data-group="{{key}}">
          <div class="sta-focus-picker-group-header">
            {{#if img}}
              <img class="sta-focus-picker-group-img" src="{{img}}" alt="" />
            {{/if}}
            <span class="sta-focus-picker-group-name">{{label}}</span>
          </div>

          <ol class="sta-focus-picker-list">
            {{#each items}}
              <li class="sta-focus-picker-item" data-name="{{lcName}}" data-meets="{{meetsRequirements}}" data-uuid="{{uuid}}">
                <div class="sta-focus-picker-entry">
                  <button
                    type="button"
                    class="sta-focus-picker-choice{{#unless meetsRequirements}} is-disabled{{/unless}}"
                    data-action="choose"
                    data-name="{{name}}"
                    data-img="{{img}}"
                    data-uuid="{{uuid}}"
                    {{#unless meetsRequirements}}disabled aria-disabled="true"{{/unless}}
                    {{#if requirementLabel}}
                      title="{{requirementLabel}}{{#unless meetsRequirements}} (missing){{/unless}}"
                    {{/if}}
                  >
                    {{#if img}}
                      <img class="sta-focus-picker-img" src="{{img}}" alt="" />
                    {{/if}}
                    <span class="sta-focus-picker-name">{{name}}</span>
                  </button>
                  <button
                    type="button"
                    class="sta-focus-picker-preview"
                    data-action="preview"
                    data-name="{{name}}"
                  >
                    Preview
                  </button>
                </div>
              </li>
            {{/each}}
          </ol>
        </section>
      {{/each}}
    </div>
  {{else}}
    <p><em>{{emptyLabel}}</em></p>
  {{/if}}

  <footer class="form-footer">
    <button type="button" class="dialog-button" data-action="cancel">Cancel</button>
  </footer>
</form>
