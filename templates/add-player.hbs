<div class="form-group">
  <label>{{localize "sta-officers-log.dialog.addPlayer.playerLabel"}}</label>
  <select name="userId">
    {{#each available}}
      <option value="{{id}}" {{#if selected}}selected{{/if}}>{{name}}</option>
    {{/each}}
    {{#each already}}
      <option value="{{id}}" disabled>{{name}} ({{localize "sta-officers-log.dialog.addPlayer.alreadyInMission"}})</option>
    {{/each}}
  </select>
  <p class="hint">{{localize "sta-officers-log.dialog.addPlayer.hint"}}</p>
</div>

<div class="form-group">
  <label class="checkbox">
    <input type="checkbox" name="createLog" checked />
    {{localize "sta-officers-log.dialog.addPlayer.createLog"}}
  </label>
</div>
